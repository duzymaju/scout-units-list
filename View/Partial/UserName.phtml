<?php if (isset($this->user)): ?>
    <?php $name = $this->user->getName(); $email = $this->user->getEmailIfAllowed(); if (empty($email)): ?>
        <span<?php echo $this->getAttr('class', $this->cssClass); ?>>
            <?php echo $this->escape($name); ?>
        </span>
