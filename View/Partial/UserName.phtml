        <a href="mailto:<?php echo $this->escape($email); ?>"<?php echo $this->getAttr('class', $this->cssClass); ?>>
            <?php echo $this->escape($name); ?>
        </a>
    <?php endif; ?>
<?php else: ?>
    -
<?php endif;
